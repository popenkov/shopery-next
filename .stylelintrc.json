{
  "extends": ["stylelint-config-standard", "stylelint-config-rational-order"],
  "plugins": [
    "stylelint-order",
    "stylelint-config-rational-order/plugin",
    "stylelint-scss"
  ],
  "rules": {
    "selector-class-pattern": "^.*$",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/^at-/",
          "/^mixin/",
          "/^extend/",
          "/^include/",
          "/^if/",
          "/^else/",
          "/^function/",
          "/^return/",
          "/^each/",
          "/^while/",
          "use"
        ]
      }
    ],
    "function-no-unknown": null,
    "import-notation": "string",
    "declaration-block-no-redundant-longhand-properties": [
      true,
      {
        "ignoreShorthands": ["/grid/"]
      }
    ],
    "order/order": [
      "custom-properties",
      {
        "type": "at-rule",
        "name": "include"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "media"
      },
      {
        "type": "rule",
        "selector": "^&:\\w+$"
      },
      {
        "type": "rule",
        "selector": "^&--[-a-z0-9]+"
      },
      {
        "type": "rule",
        "selector": "^\\.[-_a-zA-Z0-9]+"
      },
      {
        "type": "rule",
        "selector": "^&__[-a-z0-9]+"
      }
    ]
  }
}
